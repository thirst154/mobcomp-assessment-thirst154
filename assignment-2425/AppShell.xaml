<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="assignment_2425.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:assignment_2425"
    xmlns:view="clr-namespace:assignment_2425.View"
    Title="assignment_2425"
    FlyoutBehavior="Flyout"
    >


    <Shell.FlyoutHeader>

        <Grid
            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
            HeightRequest="200">
            <Label Text="Menu"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="30"/>

        </Grid>

    </Shell.FlyoutHeader>


    <FlyoutItem 
        Title="Meals"
        Icon="icon_home.png">
        <Tab Title="Meals">
            <ShellContent
                Title="Meals"
                ContentTemplate="{DataTemplate view:Meals}"
                Route="MainPage"
                />
        </Tab>
    </FlyoutItem>
    <FlyoutItem 
    Title="Shopping"
    Icon="icon_home.png">

        <Tab Title="Shopping">
            <ShellContent
                Title="Shopping"
                ContentTemplate="{DataTemplate view:Shopping}"
                Route="TestPage" />

        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="About" Icon="icon_about.png">
        <ShellContent
    Title="About"
    ContentTemplate="{DataTemplate view:AboutPage}"/>
    </FlyoutItem>

    



</Shell>
